<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoMoney.Views.SettingsPage"
             NavigationPage.HasNavigationBar="False"
             xmlns:viewmodel="clr-namespace:MoMoney.ViewModels"
             x:DataType="viewmodel:SettingsViewModel"
             Title="">

    <ContentPage.BindingContext>
        <viewmodel:SettingsViewModel />
    </ContentPage.BindingContext>

    <!-- styles -->
    <ContentPage.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </ContentPage.Resources>

    <!-- main page -->
    <Frame BackgroundColor="{StaticResource Gray900}" Margin="10" Padding="10">
        <VerticalStackLayout>
            <Label Text="Data" FontSize="18" Margin="0,0,0,10" />
            <Button x:Name="btnAccounts" Text="Accounts" Command="{Binding GoToAccountsCommand}" />
            <Button x:Name="btnCategories" Text="Categories" Command="{Binding GoToCategoriesCommand}" />
            <Button x:Name="btnTest" Text="Calculate Account Balance" Command="{Binding CalculateBalanceCommand}" />
        </VerticalStackLayout>
    </Frame>

</ContentPage>