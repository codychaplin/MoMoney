<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoMoney.Views.MainPage"
             xmlns:views="clr-namespace:MoMoney.Views;assembly=MoMoney"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
             Title="">

    <ContentPage.Content>
        <tabView:SfTabView TabBarPlacement="Bottom"
                           TabBarHeight="40"
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Background}}"
                           IndicatorBackground="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}">
            <!-- tabs -->
            <tabView:SfTabView.Items>
                
                <!-- transactions page -->
                <tabView:SfTabItem ImageSource="{AppThemeBinding Light=tab_money_black.png, Dark=tab_money_white.png}">
                    <Grid>
                        <views:TransactionsPage />
                    </Grid>
                </tabView:SfTabItem>

                <!-- home page -->
                <tabView:SfTabItem ImageSource="{AppThemeBinding Light=tab_home_black.png, Dark=tab_home_white.png}">
                    <Grid>
                        <views:HomePage />
                    </Grid>
                </tabView:SfTabItem>

                <!-- add transaction page -->
                <tabView:SfTabItem ImageSource="{AppThemeBinding Light=tab_add_black.png, Dark=tab_add_white.png}">
                    <Grid>
                        <views:AddTransactionPage />
                    </Grid>
                </tabView:SfTabItem>

                <!-- stats page -->
                <tabView:SfTabItem ImageSource="{AppThemeBinding Light=tab_stats_black.png, Dark=tab_stats_white.png}">
                    <Grid>
                        <views:StatsPage />
                    </Grid>
                </tabView:SfTabItem>

                <!-- settings page -->
                <tabView:SfTabItem ImageSource="{AppThemeBinding Light=tab_settings_black.png, Dark=tab_settings_white.png}">
                    <Grid>
                        <views:SettingsPage />
                    </Grid>
                </tabView:SfTabItem>
            </tabView:SfTabView.Items>
        </tabView:SfTabView>
    </ContentPage.Content>
</ContentPage>